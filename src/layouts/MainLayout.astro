---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description = "Kailash Research Foundation - Where Research Meets Human Resolve", 
  image = "/favicon.svg",
  canonicalURL = new URL(Astro.url.pathname, Astro.site)
} = Astro.props;

// Construct full image URL
const socialImageURL = new URL(image, Astro.site).href;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Kailash Research Foundation, KRF, research, policy, human rights, women empowerment, health access, education, community development" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Kailash Research Foundation`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | Kailash Research Foundation`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <title>{title} | Kailash Research Foundation</title>

    <!-- Structured Data / JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "@id": "https://kailashresearch.github.io/KRF-Website/#organization",
        "name": "Kailash Research Foundation",
        "url": "https://kailashresearch.github.io/KRF-Website",
        "logo": "https://kailashresearch.github.io/KRF-Website/favicon.svg",
        "description": "Kailash Research Foundation exists to bridge the gap between the complex challenges communities face and the solutions they deserve.",
        "foundingDate": "2023",
        "founders": [
          {
            "@type": "Person",
            "name": "Raveena Palli"
          },
          {
            "@type": "Person",
            "name": "Lakshya N. Palli"
          }
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "email": "info@krf.org",
          "contactType": "customer service"
        }
      }
    </script>

    <!-- Additional head content from page components -->
    <slot name="head" />
  </head>
  <body class="font-sans bg-white text-gray-800">
    <header class="bg-white shadow-sm sticky top-0 z-50">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-yellow-500">KRF</a>
        <nav class="hidden md:flex space-x-8">
          <a href="#about" class="hover:text-yellow-400 transition-colors">About</a>
          <a href="#values" class="hover:text-yellow-400 transition-colors">Values</a>
          <a href="#focus" class="hover:text-yellow-400 transition-colors">Focus Areas</a>
          <a href="#roadmap" class="hover:text-yellow-400 transition-colors">Roadmap</a>
          <a href="#founders" class="hover:text-yellow-400 transition-colors">Our Vision</a>
          <a href="#involved" class="hover:text-yellow-400 transition-colors">Get Involved</a>
        </nav>
        <button class="md:hidden text-gray-600" id="menu-toggle">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      <!-- Mobile menu -->
      <div class="md:hidden hidden bg-white w-full py-4 px-4" id="mobile-menu">
        <div class="flex flex-col space-y-4">
          <a href="#about" class="hover:text-yellow-400 transition-colors">About</a>
          <a href="#values" class="hover:text-yellow-400 transition-colors">Values</a>
          <a href="#focus" class="hover:text-yellow-400 transition-colors">Focus Areas</a>
          <a href="#roadmap" class="hover:text-yellow-400 transition-colors">Roadmap</a>
          <a href="#founders" class="hover:text-yellow-400 transition-colors">Our Vision</a>
          <a href="#involved" class="hover:text-yellow-400 transition-colors">Get Involved</a>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Kailash Research Foundation</h3>
            <p class="text-gray-300">Where Research Meets Human Resolve</p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="#about" class="text-gray-300 hover:text-white transition-colors">About Us</a></li>
              <li><a href="#values" class="text-gray-300 hover:text-white transition-colors">Our Values</a></li>
              <li><a href="#focus" class="text-gray-300 hover:text-white transition-colors">Focus Areas</a></li>
              <li><a href="#founders" class="text-gray-300 hover:text-white transition-colors">Our Vision</a></li>
              <li><a href="#involved" class="text-gray-300 hover:text-white transition-colors">Get Involved</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Contact</h3>
            <p class="text-gray-300">Email: info@krf.org</p>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Kailash Research Foundation. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      document.getElementById('menu-toggle')?.addEventListener('click', () => {
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
